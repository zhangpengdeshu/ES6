*
    margin 0 
    padding 0
body
    font-family "微软雅黑" 
ul,li,ol
    list-style none  
a 
    text-decoration none    
.clear
    clear both             
.container  
    width 1200px
    margin 0 auto    
header
    width 100%
    height 60px
    background-color #555
    display block
    position fixed
    top 0
    left 0
    z-index 666
    nav
        display block
        height 60px
        >li
          width 20%
          height 60px
          float left
          >a
            color #fff
            line-height 60px
            text-align center
            display block
            font-size 14px
footer
    width 100%
    height 36px
    background-color #f3f3f3 
    position fixed 
    left 0
    bottom 0
    z-index 555
    p
        text-align center
        font-size 12px
        color #666  
        line-height 36px          